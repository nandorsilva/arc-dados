{
    "connector.class" : "io.debezium.connector.sqlserver.SqlServerConnector",
    "tasks.max" : "1",
    "topic.prefix" : "server", 
    "database.hostname": "sqlserver",
    "database.port": "1433",
    "database.names": "dbEcommerce",
    "database.user": "sa",
    "database.password": "Password!",      
    "snapshot.mode" : "schema_only", 
    "schema.history.internal.kafka.bootstrap.servers": "kafka-broker:29092",
    "database.encrypt":false,
    "schema.history.internal.kafka.topic": "schema-changes.sqldebezium",
    "database.history": "io.debezium.relational.history.MemoryDatabaseHistory",
    "transforms": "unwrap",
    "table.include.list": "dbo.produtos, dbo.pedidos, dbo.pedidosDetalhes", 
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState", 
    "transforms.unwrap.add.fields":"after.id",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "decimal.handling.mode": "double"
}